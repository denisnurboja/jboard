<p id="notice"><%= notice %></p>

<h1>Current Openings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Position</th>
      <th>Company</th>
      <th>Location</th>
      <th>Description</th>
      <th>Applicant/s</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.position %></td>
        <td><%= job.company.name %> | Co. ID: <%= job.company.id %></td>
        <td><%= job.location %></td>
        <td><%= truncate(job.description) %></td>
        <td><%= job.job_applications.count %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to('Post a Job', new_job_path, :class => 'btn btn-primary btn-md active', :role =>"button") %>
<%= link_to('View Companies', companies_path, :class => 'btn btn-default btn-md active', :role =>'button') %>
<%= link_to('View Job Applications', job_applications_path, :class => 'btn btn-default btn-md active', :role =>'button') %>
